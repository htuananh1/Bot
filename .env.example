# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Data Storage Path
DATA_PATH=bot/data/users.json

# Webhook Configuration (for production deployment)
# Set WEBHOOK_ENABLED to true when deploying to cloud platforms
WEBHOOK_ENABLED=false
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PORT=8443
WEBHOOK_PATH=/webhook

# AI Gateway API Key (optional - for word chain and Vietnamese king games)
AI_GATEWAY_API_KEY=your_ai_gateway_api_key_here
